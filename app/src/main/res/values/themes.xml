<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BaikanAndroid" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/pink500</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/white</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/baikan_logo</item>
        <item name="windowSplashScreenAnimationDuration">200</item>  # Required for
        # animated icons

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.BaikanAndroid</item>  # Required.
    </style>
</resources>